<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.fragment.LibraryFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/root_layout">
        <com.google.android.material.appbar.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/topAppBarLayout"
            android:background="@color/md_theme_dark_background">

            <com.google.android.material.appbar.MaterialToolbar
                android:id="@+id/topAppBar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                app:title="SimpMusic"
                app:titleTextAppearance="@style/TextAppearance.Material3.TitleMedium"
                app:menu="@menu/add_playlist"
                app:layout_scrollFlags="scroll|enterAlways|snap"/>
        </com.google.android.material.appbar.AppBarLayout>
        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/topAppBarLayout"
            android:padding="10sp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardBackgroundColor="#ff99ae"
                        android:layout_gravity="start"
                        android:id="@+id/btFavorite"
                        android:layout_weight="1"
                        app:cardCornerRadius="8sp"
                        android:layout_marginEnd="5sp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="30sp"
                                android:layout_height="30sp"
                                android:layout_margin="10sp"
                                android:src="@drawable/baseline_favorite_24">

                            </ImageView>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:text="Favorite"
                                android:textColor="#000000"
                                android:textStyle="bold">

                            </TextView>
                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>
                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardBackgroundColor="#FFEB3B"
                        android:layout_gravity="end"
                        android:id="@+id/btFollowed"
                        android:layout_weight="1"
                        app:cardCornerRadius="8sp"
                        android:layout_marginStart="5sp">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <ImageView
                                android:layout_width="30sp"
                                android:layout_height="30sp"
                                android:layout_margin="10sp"
                                android:src="@drawable/baseline_insights_24">

                            </ImageView>
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Followed"
                                android:textStyle="bold"
                                android:textColor="#000000"
                                android:layout_gravity="center_vertical">

                            </TextView>
                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="10sp">
                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardBackgroundColor="#00BCD4"
                        android:layout_gravity="start"
                        android:id="@+id/btTrending"
                        android:layout_weight="1"
                        app:cardCornerRadius="8sp"
                        android:layout_marginEnd="5sp">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <ImageView
                                android:layout_width="30sp"
                                android:layout_height="30sp"
                                android:layout_margin="10sp"
                                android:src="@drawable/baseline_trending_up_24">

                            </ImageView>
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Most Played"
                                android:textStyle="bold"
                                android:textColor="#000000"
                                android:layout_gravity="center_vertical">

                            </TextView>
                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>
                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardBackgroundColor="#4CAF50"
                        android:layout_gravity="end"
                        android:id="@+id/btDownloaded"
                        android:layout_weight="1"
                        app:cardCornerRadius="8sp"
                        android:layout_marginStart="5sp">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <ImageView
                                android:layout_width="30sp"
                                android:layout_height="30sp"
                                android:layout_margin="10sp"
                                android:src="@drawable/baseline_downloading_24">

                            </ImageView>
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Downloaded"
                                android:textStyle="bold"
                                android:textColor="#000000"
                                android:layout_gravity="center_vertical">

                            </TextView>
                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>
                </LinearLayout>
                <TextView
                    android:id="@+id/tvFavoritePlaylists"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:fontFamily="@font/roboto"
                    android:text="Favorite Playlists"
                    android:layout_marginBottom="10sp"
                    android:layout_marginTop="25sp">

                </TextView>
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvFavoritePlaylists"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="10sp"
                    android:clipToPadding="false"
                    tools:listitem="@layout/item_your_playlist"/>
                <TextView
                    android:id="@+id/tvYourPlaylists"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:fontFamily="@font/roboto"
                    android:text="Your Playlists"
                    android:layout_marginBottom="10sp"
                    android:layout_marginTop="25sp">

                </TextView>
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvYourPlaylists"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="10sp"
                    android:clipToPadding="false"
                    tools:listitem="@layout/item_your_playlist"/>
                <TextView
                    android:id="@+id/tvRecentlyAdded"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:fontFamily="@font/roboto"
                    android:text="Recently Added"
                    android:layout_marginBottom="10sp"
                    android:layout_marginTop="25sp">

                </TextView>
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvRecentlyAdded"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginBottom="10sp"
                    android:paddingBottom="135sp"
                    android:clipToPadding="false"/>

            </LinearLayout>
        </androidx.core.widget.NestedScrollView>
    </RelativeLayout>

</layout>